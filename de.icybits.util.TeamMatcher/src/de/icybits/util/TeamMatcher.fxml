<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="4.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.icybits.util.TeamMatcherController">
   <children>
      <TextField fx:id="textFieldNewPlayer" promptText="Spieler Namen hier eintragen..." />
      <HBox spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addPlayer" text="Spieler zur Liste hinzuf체gen" />
            <Button mnemonicParsing="false" onAction="#deletePlayers" text="Ausgew채hlte Spieler von Liste entfernen" />
         </children>
      </HBox>
      <ListView fx:id="listViewPlayers" VBox.vgrow="ALWAYS" />
      <TextArea fx:id="textAreaResult" editable="false" promptText="Noch nicht ausgew체rfelt..." wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Spinner fx:id="spinnerCount" editable="true" />
                  <VBox spacing="4.0">
                     <children>
                        <RadioButton fx:id="radioButtonByPlayerCount" mnemonicParsing="false" text="Spieler pro Team">
                           <toggleGroup>
                              <ToggleGroup fx:id="toggleGroupEvaluationType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioButtonByTeamCount" mnemonicParsing="false" text="Anzahl Teams" toggleGroup="$toggleGroupEvaluationType" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#evaluateTeams" text="Teams ausw체rfeln" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
